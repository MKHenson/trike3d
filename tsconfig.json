{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "es7"],
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./bin",
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noStrictGenericChecks": true
  },
  "include": ["src/**/*"]
}
